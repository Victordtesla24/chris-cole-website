# ============================================================================
# BPHS BTR Prototype - Environment Configuration
# ============================================================================
# Copy this file and update with your actual values.
# Never commit the actual .env file to version control.
# ============================================================================

# ----------------------------------------------------------------------------
# API Keys and External Services
# ----------------------------------------------------------------------------

# OpenCage Geocoding API Key
# Get your free API key from: https://opencagedata.com/api
# Required for geocoding functionality
OPENCAGE_API_KEY=d2d47cd822ee4804bb389d742e5c1c0d

# ----------------------------------------------------------------------------
# Swiss Ephemeris Configuration
# ----------------------------------------------------------------------------

# Path to Swiss Ephemeris data files (optional)
# If not set, Swiss Ephemeris will use its default data files
# Example: /usr/local/share/swisseph or ./swisseph_data
EPHE_PATH=

# ----------------------------------------------------------------------------
# FastAPI/Uvicorn Server Configuration
# ----------------------------------------------------------------------------

# Server host (use 0.0.0.0 to accept connections from all interfaces)
# For production, consider using 0.0.0.0 behind a reverse proxy
HOST=127.0.0.1

# Server port
PORT=8000

# Number of worker processes (0 = auto-detect CPU count)
# For production, set based on CPU cores: (2 * CPU cores) + 1
WORKERS=0

# Uvicorn worker class (uvicorn.workers.UvicornWorker for production)
WORKER_CLASS=uvicorn.workers.UvicornWorker

# Enable/disable access logs
ACCESS_LOG=true

# Enable/disable server logs
LOG_CONFIG=

# Debug mode (enables detailed error messages, auto-reload)
# Set to 'true' for development, 'false' for production
DEBUG=true

# Environment: development, staging, or production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ----------------------------------------------------------------------------
# CORS Configuration
# ----------------------------------------------------------------------------

# Allowed CORS origins (comma-separated list)
# For production, specify exact domains instead of wildcards
# Example: https://example.com,https://www.example.com
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080

# CORS allow credentials
CORS_ALLOW_CREDENTIALS=true

# CORS allowed methods (comma-separated)
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS

# CORS allowed headers (comma-separated)
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With,Accept,Origin

# CORS expose headers (comma-separated)
CORS_EXPOSE_HEADERS=

# CORS max age in seconds (preflight cache duration)
CORS_MAX_AGE=3600

# ----------------------------------------------------------------------------
# Security Configuration
# ----------------------------------------------------------------------------

# Secret key for session management and cryptographic operations
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=

# Allowed hosts (comma-separated list for production)
# Used for host header validation
ALLOWED_HOSTS=localhost,127.0.0.1

# Enable HTTPS redirect (for production behind reverse proxy)
FORCE_HTTPS=false

# Security headers
# Enable X-Content-Type-Options header
SECURITY_X_CONTENT_TYPE_OPTIONS=nosniff

# Enable X-Frame-Options header
SECURITY_X_FRAME_OPTIONS=DENY

# Enable X-XSS-Protection header
SECURITY_X_XSS_PROTECTION=1; mode=block

# Content Security Policy (CSP) header
SECURITY_CSP=

# ----------------------------------------------------------------------------
# Rate Limiting Configuration
# ----------------------------------------------------------------------------

# Enable rate limiting
RATE_LIMIT_ENABLED=false

# Rate limit requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# Rate limit requests per hour per IP
RATE_LIMIT_PER_HOUR=1000

# Rate limit requests per day per IP
RATE_LIMIT_PER_DAY=10000

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------

# Application name
APP_NAME=BPHS BTR Prototype

# Application version
APP_VERSION=1.0.0

# API prefix
API_PREFIX=/api

# Request timeout in seconds
REQUEST_TIMEOUT=30.0

# Maximum request size in bytes (default: 10MB)
# Adjust based on your needs
MAX_REQUEST_SIZE=10485760

# Enable request ID middleware
ENABLE_REQUEST_ID=true

# Enable timing middleware
ENABLE_TIMING=true

# ----------------------------------------------------------------------------
# Database Configuration (if needed in future)
# ----------------------------------------------------------------------------

# Database URL (SQLAlchemy format)
# Example: postgresql://user:password@localhost:5432/dbname
# Example: sqlite:///./btr.db
DATABASE_URL=

# Database pool size
DB_POOL_SIZE=5

# Database max overflow
DB_MAX_OVERFLOW=10

# Database pool timeout
DB_POOL_TIMEOUT=30

# Database pool recycle (seconds)
DB_POOL_RECYCLE=3600

# ----------------------------------------------------------------------------
# Caching Configuration (if needed in future)
# ----------------------------------------------------------------------------

# Cache backend type: memory, redis, or none
CACHE_BACKEND=none

# Redis URL (if using Redis cache)
# Example: redis://localhost:6379/0
REDIS_URL=

# Cache TTL in seconds (default: 300)
CACHE_TTL=300

# ----------------------------------------------------------------------------
# Monitoring and Observability
# ----------------------------------------------------------------------------

# Enable health check endpoint
HEALTH_CHECK_ENABLED=true

# Health check path
HEALTH_CHECK_PATH=/health

# Enable metrics endpoint (Prometheus format)
METRICS_ENABLED=false

# Metrics path
METRICS_PATH=/metrics

# Enable OpenTelemetry tracing
OTEL_ENABLED=false

# OpenTelemetry endpoint
OTEL_ENDPOINT=

# ----------------------------------------------------------------------------
# Error Handling
# ----------------------------------------------------------------------------

# Enable detailed error responses (set to false in production)
DETAILED_ERRORS=true

# Error notification email (for production error reporting)
ERROR_NOTIFICATION_EMAIL=

# ----------------------------------------------------------------------------
# External API Configuration
# ----------------------------------------------------------------------------

# OpenCage API timeout in seconds
OPENCAGE_TIMEOUT=10.0

# OpenCage API retry attempts
OPENCAGE_RETRY_ATTEMPTS=3

# OpenCage API retry backoff factor
OPENCAGE_RETRY_BACKOFF=1.0

# ----------------------------------------------------------------------------
# Swiss Ephemeris Advanced Configuration
# ----------------------------------------------------------------------------

# Swiss Ephemeris calculation flags
# See Swiss Ephemeris documentation for available flags
SWISSEPH_FLAGS=

# Ayanamsa type (default: Lahiri)
# Options: LAHIRI, RAMAN, KRISHNAMURTI, etc.
AYANAMSA_TYPE=LAHIRI

# ----------------------------------------------------------------------------
# Development/Testing Configuration
# ----------------------------------------------------------------------------

# Enable API documentation (Swagger/OpenAPI)
ENABLE_DOCS=true

# API documentation path
DOCS_PATH=/docs

# Alternative API documentation path (ReDoc)
REDOC_PATH=/redoc

# OpenAPI schema path
OPENAPI_PATH=/openapi.json

# Enable test mode (disables certain validations)
TEST_MODE=false

# Test API key (for testing purposes only)
TEST_API_KEY=
